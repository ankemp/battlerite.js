{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "baseUrl": "./",
    "paths": {
      "minimist-string": [
        "minimist-string",
        "types/minimist-string"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "outDir": "dist-es2017",
    "sourceMap": false,
    "declaration": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ]
}